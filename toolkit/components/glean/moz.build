SPHINX_TREES['/toolkit/components/glean'] = 'docs'

if CONFIG['MOZ_GLEAN']:
    # Needed so that we can include IPC things.
    include('/ipc/chromium/chromium-config.mozbuild')

    FINAL_LIBRARY = 'xul'

    EXPORTS.mozilla += [
        'ipc/FOGIPC.h',
    ]

    UNIFIED_SOURCES += [
        'ipc/FOGIPC.cpp',
    ]

    TEST_DIRS += [
        'gtest',
    ]

    PYTHON_UNITTEST_MANIFESTS += [
        'pytest/python.ini',
    ]

    GeneratedFile('api/src/metrics.rs',
                  script='build_scripts/glean_parser_ext/run_glean_parser.py',
                  flags=['METRICS', CONFIG['MOZ_APP_VERSION']],
                  inputs=['metrics_index.py'])

    GeneratedFile('api/src/pings.rs',
                  script='build_scripts/glean_parser_ext/run_glean_parser.py',
                  flags=['PINGS', CONFIG['MOZ_APP_VERSION']],
                  inputs=['metrics_index.py'])

    DIRS += [
        'xpcom',
    ]

with Files('docs/**'):
    SCHEDULES.exclusive = ['docs']

with Files('**'):
    BUG_COMPONENT = ('Toolkit', 'Telemetry')
